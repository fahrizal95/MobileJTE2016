<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas06_joystick.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atas"
        android:id="@+id/ateh"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiri"
        android:id="@+id/wie"
        android:layout_below="@+id/ateh"
        android:layout_toLeftOf="@+id/ateh"
        android:layout_toStartOf="@+id/ateh"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanan"
        android:id="@+id/neun"
        android:layout_below="@+id/ateh"
        android:layout_toRightOf="@+id/ateh"
        android:layout_toEndOf="@+id/ateh"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bawah"
        android:id="@+id/diyup"
        android:layout_below="@+id/wie"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton" />
</RelativeLayout>
